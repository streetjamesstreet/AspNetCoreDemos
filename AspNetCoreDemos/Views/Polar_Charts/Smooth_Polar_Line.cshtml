@model IEnumerable<AspNetCoreDemos.Models.Chart.SunPositionItem>

<div class="demo-section k-content wide">
    @(Html.Kendo().Chart(Model)
        .Name("chart")
        .Title(title => title
            .Text("Sun position at equinox")
        )
        .Series(series =>
        {
            series.PolarLine(
                model => model.Azimuth,
                model => model.Altitude
            )
            .Style(ChartSeriesStyle.Smooth)
            .Labels(labels => labels
                .Template("#= dataItem.Time.substring(0,2) #h")
                .Position(ChartSeriesLabelsPosition.Below)
                .Visible(true)
            );
        })
        .XAxis(axis => axis
            .Polar()
            .StartAngle(-90)
            .MajorUnit(30)
        )
        .YAxis(axis => axis
            .Polar()
            .Labels(labels => labels
                .Visible(false)
            )
        )
    ) 
</div>